FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];


internalField   uniform 10;

boundaryField
{
    left
    {
        type            fixedGradient;
        gradient        uniform 0;
    }
    right
    {
        type            fixedValue;
        value           uniform 0.5;
    }
    TopBottom
    {
        type            zeroGradient;
    }
    FrontBack
    {
        type            empty;
    }
    defaultFaces
    {
        type            empty;
    }
}

