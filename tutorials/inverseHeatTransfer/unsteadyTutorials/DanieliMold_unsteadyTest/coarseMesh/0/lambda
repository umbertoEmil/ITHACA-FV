FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      lambda;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];


internalField   uniform 0; 

boundaryField
{
    top
    {
        type            fixedGradient;
        gradient        uniform 0;
    }
    sides
    {
        type            fixedGradient;
        gradient        uniform 0;
    }
    back
    {
        type            fixedGradient;
        gradient        uniform 0;
    }
    hotSide
    {
        type            fixedGradient;
        gradient        uniform -0;
    }
    bottom
    {
        type            fixedGradient;
        gradient        uniform 0;
    }
    coldSide
    {
        type            mixed;
        refValue        uniform 0; 
        refGradient     uniform 0; 
	valueFraction   uniform 0;
    }
}

